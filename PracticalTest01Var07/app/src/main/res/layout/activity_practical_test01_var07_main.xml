<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticalTest01Var07MainActivity">

    <EditText
        android:id="@+id/top_left_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:ems="9"
        android:enabled="true"
        android:gravity="center"
        android:inputType="number"
        android:saveEnabled="false" />

    <EditText
        android:id="@+id/top_right_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="9"
        android:enabled="true"
        android:gravity="center"
        android:inputType="number"
        android:saveEnabled="false" />

    <EditText
        android:id="@+id/bottom_left_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_left_edit_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:ems="9"
        android:enabled="true"
        android:gravity="center"
        android:inputType="number"
        android:saveEnabled="false" />

    <EditText
        android:id="@+id/bottom_right_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_right_edit_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="9"
        android:enabled="true"
        android:gravity="center"
        android:inputType="number"
        android:saveEnabled="false" />

    <Button
        android:id="@+id/set_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom_left_edit_text"
        android:layout_centerHorizontal="true"
        android:text="@string/set" />

</RelativeLayout>